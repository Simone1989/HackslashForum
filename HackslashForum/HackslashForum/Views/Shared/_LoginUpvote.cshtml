@model Post

@using Microsoft.AspNetCore.Identity
@using HackslashForum.Models
@using HackslashForum.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject ApplicationDbContext _context;

@if (SignInManager.IsSignedIn(User))
{
    var user = await SignInManager.UserManager.GetUserAsync(User);

    var VotedPost = _context.VotedUsers.Where(p => p.PostId == Model.Id).Where(p => p.UserId == user.Id).Take(1).SingleOrDefault();

    if (VotedPost != null && VotedPost.Vote == Vote.Up)
    {
        <form asp-action="Upvote" asp-route-id="@Model.Id" asp-controller="Posts">
            <span>
                <img src="~/images/Upvote.png" style="height: 20px; width: 20px; filter: brightness(100%);" />
            </span>
        </form>
    }
    else
    {
        <form asp-action="Upvote" asp-route-id="@Model.Id" asp-controller="Posts">
            <span>
                <input type="image" src="~/images/Upvote.png" alt="Submit" value="upvote" style="height: 20px; width: 20px; filter: brightness(50%);" />
            </span>
        </form>
    }

    
}