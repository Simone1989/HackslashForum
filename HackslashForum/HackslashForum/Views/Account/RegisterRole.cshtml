@model RoleViewModel
@{
    ViewData["Title"] = "RegisterRole";
}

<h2 style="font-family: Orbitron">Hantera roller</h2>
<br />
@using (Html.BeginForm("RegisterRole", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.Label("ApplicationUsers", "Välj användare", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.SelectedUserId, new SelectList(Model.ApplicationUsers))
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Promota/Demota">
        </div>
    </div>
}

