@model IEnumerable<HackslashForum.Post>

@{
    ViewData["Title"] = "Home Page";
}

<div id="posts">

<h2>Posts</h2>

@{ 
    int counter = 0; 
}

@foreach (var item in Model)
{
    counter++;
    <p><a href="https://localhost:44369/Posts/Details/@counter">@Html.DisplayFor(modelitem => item.Title)</a></p>
}

</div>

